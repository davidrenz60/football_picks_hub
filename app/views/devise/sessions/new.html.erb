<div class="d-flex justify-content-center align-items-center min-vh-100 bg-body-tertiary">
  <div class="w-100 m-auto user-form border p-4">
    <h2>Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-floating mb-2">
          <%= f.email_field :email, class: "form-control", autocomplete: "email", placeholder: "email" %>
          <%= f.label :email %>
        </div>

        <div class="form-floating mb-2">
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "password" %>
          <%= f.label :password %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group my-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <%= f.submit "Log in", class: "btn btn-primary w-100" %>
      <% end %>

      <div class="my-3">
        <%= render "devise/shared/links" %>
      </div>
</div>