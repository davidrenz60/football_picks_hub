<header>
  <%= render 'shared/navbar' %>
</header>
<div class="container-fluid">
  <div class="row">
    <div class="border border-right col-md-3 col-lg-2 bg-body-tertiary">
      <div class="offcanvas-md offcanvas-end bg-body-tertiary" tabindex="1" id="user-sidebar-menu">
        <div class="offcanvas-header">
          <h5>Football Picks Hub</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#user-sidebar-menu" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body flex-column">
          <ul class="nav flex-column">
            <li>
              <%= link_to "Dashboard", user_root_path, class: "nav-link active" %>
            </li>
            <li>
              <%= link_to "All Users", users_path, class: "nav-link", data: { turbo_frame: 'main-content' } %>
            </li>
          </ul>
          <hr class="my-3">
          <ul class="nav flex-column">
            <li>
              <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
            </li>
          </ul>
        </div>
      </div>
    </div>


  <main class="col-md-9 col-lg-10">

    <%= turbo_frame_tag 'main-content' do %>
      <h1>Welcome <%= current_user.email %></h1>
    <% end %>
  </main>
  </div>
</div>