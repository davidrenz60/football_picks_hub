<div class="offcanvas-md offcanvas-end bg-body-tertiary" tabindex="1" id="user-sidebar-menu">
  <div class="offcanvas-header">
    <h5>Football Picks Hub</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#user-sidebar-menu" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body flex-column">
    <ul class="nav flex-column">
      <li>
        <%= link_to user_root_path, class: "nav-link active"  do %>
          <%= icon('fa-solid', 'desktop', class: "me-2")%>
          Dashboard
        <% end %>
      </li>
      <li>
        <%= link_to pools_path, class: "nav-link" do %>
          <%= icon('fa-solid', 'gear', class: "me-2")%>
          Manage Pools
        <% end %>
      </li>
      <li>
        <%= link_to user_pools_path(current_user), class: "nav-link" do %>
        <%= icon('fa-solid', 'user-group', class: "me-2")%>
        My Pools
        <% end %>
      </li>
      <li>
        <%= link_to games_path, class: "nav-link" do %>
        <%= icon('fa-solid', 'football', class: "me-2")%>
        Games Schedule
        <% end %>
      </li>
    </ul>
    <hr class="my-3">
    <ul class="nav flex-column">
      <li>
        <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>
